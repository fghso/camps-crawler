<?xml version="1.0" encoding="ISO8859-1" ?>
<config>
    <global>
        <connection>
            <address>localhost</address>
            <port>7777</port>
        </connection>
        <echo>
            <verbose>True</verbose>
            <loggingpath>../logs</loggingpath>
        </echo>
    </global>
    <server>
        <persistence>
            <class>FilePersistenceHandler</class>
            <filename>resources.csv</filename>
            <resourceidcolumn>id</resourceidcolumn>
            <statuscolumn>status</statuscolumn>
            <savetimedelta>25</savetimedelta>
            <echo>
                <verbose>False</verbose>
            </echo>
        </persistence>
        <filtering>
            <filter>
                <class>SaveResourcesFilter</class>
                <name>savejson</name>
                <parallel>True</parallel>
                <persistence>
                    <class>RolloverFilePersistenceHandler</class>
                    <filename>new_resources.json</filename>
                    <resourceidcolumn>id</resourceidcolumn>
                    <statuscolumn>status</statuscolumn>
                    <savetimedelta>25</savetimedelta>
                    <sizethreshold>500</sizethreshold>
                    <amountthreshold>5</amountthreshold>
                    <echo>
                        <verbose>False</verbose>
                    </echo> 
                </persistence>
            </filter>
            <filter>
                <class>SaveResourcesFilter</class>
                <name>savecsv</name>
                <persistence>
                    <class>FilePersistenceHandler</class>
                    <filename>new_resources.csv</filename>
                    <resourceidcolumn>id</resourceidcolumn>
                    <statuscolumn>status</statuscolumn>
                    <savetimedelta>25</savetimedelta>
                    <echo>
                        <verbose>False</verbose>
                    </echo>
                </persistence>
            </filter>
        </filtering>
    </server>
    <client>
        <crawler>
            <class>DemoCrawler</class>
        </crawler>
    </client>
</config>
